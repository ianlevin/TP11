<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
<div class = "centrador">
    <div class = "formulario">
        <form action='@Url.Action("CargarDatos1")' method="POST" class="container" enctype="multipart/form-data">  
            <div class="form-group mb-3">
            <select class="form-control" name="IdMarca" type="number" required>
                    <option value="" disabled selected>Marca</option>
                    @foreach (Marca item in ViewBag.ListaMarcas)
                    {
                        <option value="@(item.IdMarca)">@item.NombreMarca</option>
                    }
                </select>
            </div>

            <div class="form-group mb-3">
                <input type="text" class="form-control" placeholder="Motor" name="Motor" value="" required>
            </div>

            <div class="form-group mb-3">
                <input type="text" class="form-control" placeholder="Matricula" name="Matricula" value="" required>
            </div>

            <div class="form-group mb-3">
                <input type="text" class="form-control" placeholder="Kilometraje" name="Kilometraje" value="" required>
            </div>

            <input type="hidden" name="Idusuario" value="@ViewBag.IdUsuario">

            <div class="form-group text-center mb-3">
                <button type="submit" class="btn btn-primary">Continuar</button>
            </div>
        </form>
    </div>
</div>
</body>