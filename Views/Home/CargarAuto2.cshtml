<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

<div class = "centrador">
    <div class = "formulario">
    <form action='@Url.Action("CargarDatos2")' method="POST" class="container" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <input type="text" class="form-control" placeholder="Año de fabricación" name="Ano" value="" required>
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" placeholder="Cantidad de asientos" name="Asientos" value="" required>
        </div>

        <div class="form-group mb-3">
            <select class="form-control" name="IdColor" type="number" placeholder="Color" required>
                <option value="" disabled selected>Color</option>
                @foreach (Color item in ViewBag.ListaColores)
                {
                    <option value="@(item.IdColor)">@item.NombreColor</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
           <select class="form-control" name="IdModelo" type="number" required>
                <option value="" disabled selected>Modelo</option>
                @foreach (Modelo item in ViewBag.ListaModelos)
                {
                    <option value="@(item.IdModelo)">@item.NombreModelo</option>
                }
            </select> 
        </div>

        <input type="hidden" name="Idusuario" value="@ViewBag.IdUsuario">

        <div class="form-group text-center mb-3">
            <button type="submit" class="btn btn-primary">Continuar</button>
        </div>
    </form>
    </div>
</div>
</body>



